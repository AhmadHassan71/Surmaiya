<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/yellow_gradient_background"
	android:clipChildren="false"
	android:clipToPadding="false">


	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="54dp"
		android:layout_marginTop="943dp"
		android:background="@color/icon_secondary"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView

			android:layout_width="38dp"
			android:layout_height="15dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="168dp"
			android:layout_marginBottom="8dp"
			android:gravity="center_horizontal|top"
			android:text=" Search"
			android:textColor="@color/white"
			android:textSize="10sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<ImageView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="24dp"
			android:layout_marginTop="12dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/home1" />

		<TextView

			android:layout_width="33dp"
			android:layout_height="11dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="16dp"
			android:layout_marginBottom="8dp"
			android:gravity="center_horizontal|top"
			android:text=" Home"
			android:textColor="@color/white"
			android:textSize="10sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<ImageView

			android:layout_width="21dp"
			android:layout_height="26dp"
			android:layout_marginStart="168dp"
			android:layout_marginTop="8dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/search1" />

		<ImageView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="68dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/your_lib" />

		<TextView

			android:layout_width="72dp"
			android:layout_height="11dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="340dp"
			android:layout_marginBottom="8dp"
			android:gravity="center_horizontal|top"
			android:text=" Your Library"
			android:textColor="@color/white"
			android:textSize="10sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />


	</androidx.constraintlayout.widget.ConstraintLayout>

	<ScrollView


		android:layout_width="443dp"
		android:layout_height="607dp"
		android:clipChildren="false"
		android:clipToPadding="false"
		android:fillViewport="true"
		android:paddingTop="37dp"
		android:paddingBottom="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clipChildren="false"
			android:clipToPadding="false"
			android:orientation="vertical">

			<LinearLayout

				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="28dp"
				android:layout_marginBottom="67dp"
				android:orientation="horizontal">

				<ImageView

					android:layout_width="48dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="79dp"
					android:scaleType="fitXY"
					android:src="@drawable/left_arrow" />

				<TextView

					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_weight="1"
					android:text="Add Song"
					android:textColor="#00A136"
					android:textSize="32sp" />
			</LinearLayout>

			<LinearLayout

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="101dp"
				android:layout_marginBottom="11dp"
				android:background="@drawable/art_work_background"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingTop="49dp"
				android:paddingBottom="32dp">

				<TextView

					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="14dp"
					android:layout_marginBottom="14dp"
					android:text="Add Artwork"
					android:textColor="#303030"
					android:textSize="24sp" />

				<TextView

					android:layout_width="36dp"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="86dp"
					android:text="+"
					android:textColor="#303030"
					android:textSize="40sp" />
			</LinearLayout>

			<TextView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="120dp"
				android:layout_marginBottom="52dp"
				android:text="(300x300) minimum quality"
				android:textColor="#FFFFFF"
				android:textSize="13sp" />

			<TextView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="146dp"
				android:layout_marginBottom="27dp"
				android:text="New Song"
				android:textColor="#FFFFFF"
				android:textSize="20sp" />

			<EditText
				android:background="@null"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="82dp"
				android:layout_marginBottom="5dp"
				android:text="Name"
				android:textColor="#8A9A9D"
				android:textSize="16sp" />

			<LinearLayout

				android:layout_width="266dp"
				android:layout_height="1dp"
				android:layout_marginHorizontal="62dp"
				android:layout_marginBottom="25dp"
				android:background="#FF8A9A9D"
				android:orientation="vertical">

			</LinearLayout>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="81dp"
				android:background="@null"
				android:layout_marginBottom="5dp"
				android:text="Name of Artists"
				android:textColor="#8A9A9D"
				android:textSize="16sp" />

			<View

				android:layout_width="266dp"
				android:layout_height="1dp"
				android:layout_marginHorizontal="63dp"
				android:layout_marginBottom="43dp"
				android:background="#FF8A9A9D"
				android:orientation="vertical"></View>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="150dp"
				android:text="Music File"
				android:textColor="#FFFFFF"
				android:textSize="20sp" />

			<ImageView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginStart="151dp"
				app:srcCompat="@drawable/add_song"
				app:tint="@color/icon_secondary" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Button

					android:layout_width="72dp"
					android:layout_height="32dp"
					android:layout_marginStart="50dp"
					android:layout_marginEnd="150dp"
					android:background="@drawable/cancel_background"
					android:text="Cancel"

					android:textAllCaps="false"
					android:textColor="@color/white"
					android:textSize="14sp"
					tools:layout_editor_absoluteX="-34dp"
					tools:layout_editor_absoluteY="779dp" />

				<Button
					android:layout_width="85dp"
					android:layout_height="31dp"
					android:background="@drawable/green_round"
					android:layout_marginTop="10dp"
					android:text="Create"
					android:textAllCaps="false"
					android:textColor="@color/white"
					android:textSize="14dp" />

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
