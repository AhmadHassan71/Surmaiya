<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_gradient_background"
    android:clipChildren="false"
    android:clipToPadding="false">


    <ScrollView
        android:id="@+id/scrollView5"

        android:layout_width="443dp"
        android:layout_height="607dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingTop="37dp"
        android:paddingBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginBottom="67dp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="79dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/left_arrow" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Add Song"
                    android:textColor="#00A136"
                    android:textSize="32sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="101dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/art_work_background"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="49dp"
                android:paddingBottom="32dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginBottom="14dp"
                    android:text="Add Artwork"
                    android:textColor="#303030"
                    android:textSize="24sp" />

                <TextView

                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="86dp"
                    android:text="+"
                    android:textColor="#303030"
                    android:textSize="40sp" />
            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="120dp"
                android:layout_marginBottom="52dp"
                android:text="(300x300) minimum quality"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="146dp"
                android:layout_marginBottom="27dp"
                android:text="New Album"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="82dp"
                android:layout_marginBottom="5dp"
                android:text="Name"
                android:textColor="#8A9A9D"
                android:textSize="16sp" />

            <LinearLayout

                android:layout_width="266dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="62dp"
                android:layout_marginBottom="25dp"
                android:background="#FF8A9A9D"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/r0zz4k1rt5zoc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/r8eklw1n2fou"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="3dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/starboy" />

                <LinearLayout
                    android:id="@+id/rjuu38jkqom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/r5wjk1ycnqmg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginBottom="6dp"
                        android:text="StarBoy"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/r40ydgd8lol6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Weekend"
                        android:textColor="#00A136"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rnk1v5r9v4ca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="80dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/roapzpns2osb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Song"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    app:tint="@color/white"
                    app:srcCompat="@drawable/plus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button

                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="150dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/cancel_background"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="-34dp"
                    tools:layout_editor_absoluteY="779dp" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="31dp"
                    android:background="@drawable/green_round"

                    android:text="Create"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
