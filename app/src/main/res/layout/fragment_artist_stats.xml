<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ArtistStatsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stat_background">

        <TextView
            android:id="@+id/albumsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albums"
            android:textColor="#7E8389"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumCount" />

        <TextView
            android:id="@+id/albumCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="161dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:text="42"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@id/albumsLabel"
            app:layout_constraintTop_toBottomOf="@id/songsCreatedLabel" />

        <TextView
            android:id="@+id/songsCreatedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Songs Created"
            android:textColor="#7E8389"
            android:textSize="16sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/songsCreatedCount" />

        <TextView
            android:id="@+id/songsCreatedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="161dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="40dp"
            android:text="213"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@id/songsCreatedLabel"
            app:layout_constraintTop_toBottomOf="@id/monthlyListenersLabel" />

        <TextView
            android:id="@+id/monthlyListenersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="129dp"
            android:text="Monthly Listeners"
            android:textColor="#7E8389"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalListenersCount" />

        <TextView
            android:id="@+id/genreCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="161dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@id/genresLabel"
            app:layout_constraintTop_toBottomOf="@id/albumsLabel" />

        <TextView
            android:id="@+id/totalListenersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="161dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:text="24,419,528"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@id/monthlyListenersLabel"

            app:layout_constraintTop_toBottomOf="@id/artistImage" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="4dp"
            android:text="Stephen Hawking"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/artistImage"
            android:layout_width="265dp"
            android:layout_height="203dp"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="68dp"
            android:scaleType="fitXY"
            android:src="@mipmap/artist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/cr26" />

        <TextView
            android:id="@+id/genresLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="129dp"
            android:text="Genres"
            android:textColor="#7E8389"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genreCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>