<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddSongFragment">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yellow_gradient_background"
        android:clipChildren="false"
        android:clipToPadding="false">


        <ScrollView


            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingTop="37dp"
            android:paddingBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="79dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/left_arrow" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Add Song"
                        android:textColor="@color/text_primary"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addArtworkLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="11dp"
                    android:background="@drawable/art_work_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="49dp"
                    android:paddingBottom="32dp">

                    <TextView
                        android:id="@+id/addArtworkTextViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginBottom="14dp"
                        android:text="Add Artwork"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/addArtworkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </LinearLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"

                    android:layout_marginBottom="30dp"
                    android:text="(300x300) minimum quality"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="New Song"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"

                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/songName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Name"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textColorHint="#8A9A9D"
                    android:textSize="16sp" />

                <LinearLayout

                    android:layout_width="266dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"

                    android:layout_marginBottom="25dp"
                    android:background="#FF8A9A9D"
                    android:orientation="vertical"/>

                <EditText
                    android:id="@+id/songArtists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="81dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Name of Artists"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textColorHint="#8A9A9D"
                    android:textSize="16sp" />

                <LinearLayout

                    android:layout_width="266dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"

                    android:layout_marginBottom="25dp"
                    android:background="#FF8A9A9D"
                    android:orientation="vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Music File"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"

                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/addSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/add_song"
                    app:tint="@color/icon_secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="150dp"
                        android:background="@drawable/cancel_background"
                        android:text="Cancel"
                        android:layout_gravity="start"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"

                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="-34dp"
                        tools:layout_editor_absoluteY="779dp" />

                    <Button
                        android:id="@+id/createButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_round"
                        android:text="Create"
                        android:layout_gravity="end"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>