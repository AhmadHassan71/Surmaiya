<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dialog_guest_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/satoshi_bold"
        android:paddingHorizontal="50dp"
        android:paddingBottom="25dp"
        android:text="Please Enter the Email of the User You want to Invite."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_stroke"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="10dp"
        android:fontFamily="@font/abeezee"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/text_secondary"
        android:textColorHint="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_guest_user_message"
        app:layout_constraintStart_toStartOf="@+id/dialog_guest_user_message"
        app:layout_constraintTop_toBottomOf="@+id/dialog_guest_user_message" />

    <Button
        android:id="@+id/sendInviteButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/icon_secondary"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="20dp"
        android:text="Send the Invite"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>